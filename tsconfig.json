{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "build/main",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": false,
    "lib": ["es2017"],
    "types": [],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/*.ts"
  ],
  "compileOnSave": false
}
